
@{
    ViewBag.Title = "Roles";
}
@model  IEnumerable<WebApplicationTest.Context.ApplicationRole>



<h2>Роли</h2>
<table class="table">
    <tr>
        <td>
            <p>
                @Html.ActionLink("Добавить роль", "Create")
            </p>
        </td>
    </tr>
</table>

<table class="table">
    <tr>
        <th>Название</th>
        <th>Описание</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>
                @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>
