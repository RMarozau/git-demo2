@{
    ViewBag.Title = "Каталог игроков";
}
@using WebApplicationTest.Models
@using WebApplicationTest.Helpers


@model  IndexViewModel

<h2>Каталог игроков</h2>

<table class="table">
    <tr>
        <td>
            <p>
                @Html.ActionLink("Добавить игрока", "Create")
            </p>
        </td>
        <td>
            <p>
                @Html.ActionLink("Добавить команду", "CreateTeams")
            </p>
        </td>
    </tr>
</table>


<table class="table">
    <tr>
        <th>Имя игрока</th>
        <th> Возраст</th>
        <th>Команда</th>
        <th></th>
    </tr>

    @foreach (var item in Model.Players)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelitem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Team.Name)
            </td>

            <td>
                @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>
<br/>
<div class="btn-group">
    @Html.PageLinks(Model.PageInfo, x => Url.Action("Index", new { page = x }))
</div>

<p>
    @Html.ActionLink("Каталог команд", "ListTeams")
</p>